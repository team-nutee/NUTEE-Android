<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <!--상단바 색상-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--상태바 색상-->
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <!--colorAccent: 커서색, 드래그 시 하이라이트 색, EditText 선택 시 밑줄 하이라이트 색 등 강조 색을 변경-->
        <item name="colorAccent">@color/nuteeBase</item>
        <!--기본 EditText 하단 바 색-->
        <item name="colorControlNormal">@color/nuteeBase</item>


        <!--배경화면 색상 지정-->
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="TabLayoutTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--DetailImageView 배경-->
    <style name="Transparent" parent="@style/Theme.AppCompat.NoActionBar">
        <!--투명정도를 나타내는 색-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!--Dim 처리 여부 지정-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
