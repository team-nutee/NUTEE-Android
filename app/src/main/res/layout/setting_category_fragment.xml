<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="20dp"
    android:paddingEnd="27dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_setting_category_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_setting_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="선호하는 카테고리를 설정해주세요!!"
            app:layout_constraintTop_toTopOf="@id/cl_setting_category_input"
            app:layout_constraintStart_toStartOf="@id/cl_setting_category_input" />

        <TextView
            android:id="@+id/tv_setting_category_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장하기"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="@+id/tv_setting_category_text"
            app:layout_constraintBottom_toBottomOf="@+id/tv_setting_category_text"
            app:layout_constraintEnd_toEndOf="@id/cl_setting_category_input" />

        <TextView
            android:id="@+id/tv_setting_category_go_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="카테고리를 설정하러 가볼까요?"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_setting_category_text"
            app:layout_constraintTop_toBottomOf="@+id/tv_setting_category_text" />

        <ImageView
            android:id="@+id/img_setting_category_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_seaweed_24dp"
            app:layout_constraintTop_toTopOf="@+id/tv_setting_category_go_text"
            app:layout_constraintBottom_toBottomOf="@+id/tv_setting_category_go_text"
            app:layout_constraintEnd_toEndOf="@+id/tv_setting_category_save_btn" />

        <View
            android:id="@+id/view_setting_category"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/nuteeBase"
            app:layout_constraintTop_toBottomOf="@+id/tv_setting_category_go_text"
            app:layout_constraintStart_toStartOf="@+id/tv_setting_category_go_text"
            app:layout_constraintEnd_toEndOf="@+id/img_setting_category_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>