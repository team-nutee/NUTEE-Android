<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_notification"
        android:layout_width="63dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="26dp"
        android:text="알림"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_disabled_notification"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_notification_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="time"
        android:textColor="#868686"
        android:textSize="11dp"
        app:layout_constraintTop_toTopOf="@+id/btn_notification"
        app:layout_constraintBottom_toBottomOf="@+id/btn_notification"
        app:layout_constraintStart_toEndOf="@+id/btn_notification" />

    <TextView
        android:id="@+id/tv_notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="알림 메세지"
        android:textColor="#868686"
        android:textSize="11dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_notification"
        app:layout_constraintStart_toStartOf="@+id/btn_notification" />

    <TextView
        android:id="@+id/tv_notification_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="글 제목"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/tv_notification_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_notification_text" />

</androidx.constraintlayout.widget.ConstraintLayout>