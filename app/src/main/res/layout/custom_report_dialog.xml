<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/radius_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingTop="22dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="이 게시글을 신고하시겠습니까?"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="신고할 내용을 입력해 주세요.             "
        android:textSize="14dp"
        android:maxLength="100"
        app:layout_constraintEnd_toEndOf="@+id/dialog_text"
        app:layout_constraintStart_toStartOf="@+id/dialog_text"
        app:layout_constraintTop_toBottomOf="@+id/dialog_text" />

    <TextView
        android:id="@+id/btn_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="취소"
        android:textColor="@color/colorLightGray"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_report_button"
        app:layout_constraintEnd_toStartOf="@+id/btn_report_button"
        app:layout_constraintTop_toTopOf="@+id/btn_report_button" />

    <TextView
        android:id="@+id/btn_report_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingStart="15dp"
        android:paddingVertical="15dp"
        android:text="신고"
        android:textColor="@color/nuteeBase"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_report" />

</androidx.constraintlayout.widget.ConstraintLayout>