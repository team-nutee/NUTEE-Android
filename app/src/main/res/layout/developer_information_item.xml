<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_developer_information_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="이름"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_developer_information_role_1"
        android:layout_width="63dp"
        android:layout_height="19dp"
        android:layout_marginTop="11dp"
        android:text="역할"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:background="@drawable/textview_developer_information"
        android:backgroundTint="@color/nuteeBase"
        app:layout_constraintTop_toBottomOf="@+id/tv_developer_information_name"
        app:layout_constraintStart_toStartOf="@+id/tv_developer_information_name"/>

    <TextView
        android:id="@+id/tv_developer_information_role_2"
        android:layout_width="63dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:text="역할"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:background="@drawable/textview_developer_information"
        android:backgroundTint="@color/nuteeBase"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/tv_developer_information_role_1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_developer_information_role_1"
        app:layout_constraintStart_toEndOf="@+id/tv_developer_information_role_1"/>

    <TextView
        android:id="@+id/tv_developer_information_role_3"
        android:layout_width="63dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:text="역할"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:background="@drawable/textview_developer_information"
        android:backgroundTint="@color/nuteeBase"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/tv_developer_information_role_2"
        app:layout_constraintBottom_toBottomOf="@+id/tv_developer_information_role_2"
        app:layout_constraintStart_toEndOf="@+id/tv_developer_information_role_2"/>

    <ImageView
        android:id="@+id/img_developer_github_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_info_seaweed_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>