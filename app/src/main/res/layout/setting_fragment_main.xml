<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_setting_profile_image_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="347dp"
        android:text="프로필 이미지를 설정하고 싶으신가요?"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_chevron_right_black_17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_setting_nickname_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="닉네임을 변경하고 싶으신가요?"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_chevron_right_black_17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_setting_profile_image_btn" />

    <TextView
        android:id="@+id/tv_setting_password_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="비밀번호를 변경하고 싶으신가요?"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_chevron_right_black_17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_setting_nickname_btn" />

    <TextView
        android:id="@+id/tv_setting_category_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="카테고리를 변경하고 싶으신가요?"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_chevron_right_black_17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_setting_password_btn" />

    <TextView
        android:id="@+id/tv_setting_major_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="전공을 변경하고 싶으신가요?"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_chevron_right_black_17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_setting_category_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>