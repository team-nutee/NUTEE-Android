<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_setting_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".ui.setting.SettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_setting_top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_setting_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_chevron_left_seaweed_24dp"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="@id/cl_setting_top_bar"
            app:layout_constraintBottom_toBottomOf="@+id/cl_setting_top_bar"
            app:layout_constraintStart_toStartOf="@id/cl_setting_top_bar" />

        <TextView
            android:id="@+id/tv_setting_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:lineSpacingExtra="3sp"
            app:layout_constraintTop_toTopOf="@+id/cl_setting_top_bar"
            app:layout_constraintBottom_toBottomOf="@+id/cl_setting_top_bar"
            app:layout_constraintLeft_toLeftOf="@+id/cl_setting_top_bar"
            app:layout_constraintRight_toRightOf="@+id/cl_setting_top_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frame_layout_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_setting_top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

