<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingActivity"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="비밀번호를 변경하고 싶다면!"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_do_change_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="현재 비밀번호를 입력해주세요"
        android:textSize="14sp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/text_change_pw_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/text_change_pw_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/et_do_change_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_do_change_pw"
        tools:text="result" />

    <TextView
        android:id="@+id/text_change_pw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경하러가기!"
        android:textColor="@color/text_selector"
        android:textSize="14sp"
        android:clickable="true"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/et_do_change_pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_do_change_pw"
        android:focusable="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/cl_pw_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/text_change_pw_button"
        app:layout_constraintStart_toStartOf="@+id/et_do_change_pw"
        app:layout_constraintTop_toBottomOf="@+id/text_change_pw_result">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="변경할 비밀번호를 입력해주세요"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_pw_change_pw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:textSize="14sp"
            android:hint="비밀번호"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@id/et_pw_change_check"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <EditText
            android:id="@+id/et_pw_change_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            app:layout_constraintEnd_toStartOf="@+id/text_pw_change_btn"
            app:layout_constraintStart_toStartOf="@+id/et_pw_change_pw"
            app:layout_constraintTop_toBottomOf="@+id/et_pw_change_pw" />

        <TextView
            android:id="@+id/text_pw_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="변경하기"
            android:textColor="@color/text_selector"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/et_pw_change_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_pw_change_check" />

        <TextView
            android:id="@+id/text_pw_change_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TextView"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/et_pw_change_pw"
            app:layout_constraintTop_toBottomOf="@+id/et_pw_change_pw" />

        <TextView
            android:id="@+id/text_pw_change_check_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TextView"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/et_pw_change_check"
            app:layout_constraintTop_toBottomOf="@+id/et_pw_change_check" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/text_termofuse_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:text="NUTEE 서비스 이용약관"
        android:textColor="@color/text_selector"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:focusable="true"
        android:text="개발자 정보"
        android:textColor="@color/text_selector"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_logout_button"
        app:layout_constraintEnd_toEndOf="@+id/text_logout_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/text_logout_button" />

    <TextView
        android:id="@+id/text_logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:clickable="true"
        android:focusable="true"
        android:text="로그아웃"
        android:textStyle="bold"
        android:textColor="@color/text_selector"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>