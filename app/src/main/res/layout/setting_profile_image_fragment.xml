<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_setting_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_setting_profile_image_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tool:src="@mipmap/nutee_logo_round"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="@id/cl_setting_profile_image"
            app:layout_constraintStart_toStartOf="@id/cl_setting_profile_image"
            app:layout_constraintEnd_toEndOf="@id/cl_setting_profile_image" />

        <TextView
            android:id="@+id/tv_setting_progile_image_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="저장하기"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@+id/img_setting_profile_image_btn"
            app:layout_constraintStart_toStartOf="@id/img_setting_profile_image_btn"
            app:layout_constraintEnd_toEndOf="@id/img_setting_profile_image_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>