<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_main_home_recyclerview_item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_category_box"
            android:backgroundTint="@color/colorMediumGray"
            android:padding="5dp"
            android:text="category"
            android:textColor="@color/colorWhite"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/text_main_home_recyclerview_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textColor="@color/colorBlack"
            android:textSize="11dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_main_home_recyclerview_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/main_more_horiz_img" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_main_home_recyclerview_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="5dp"
        android:text="title"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_main_home_recyclerview_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:text="content"
        android:textColor="@color/colorBlack"
        android:textSize="12dp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/img_main_home_recyclerview_item_hits"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_baseline_visibility_24" />

        <TextView
            android:id="@+id/text_main_home_recyclerview_item_hits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:text="0"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/img_main_home_recyclerview_item_likes"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_baseline_favorite_24" />

        <TextView
            android:id="@+id/text_main_home_recyclerview_item_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:text="0" />

        <ImageView
            android:id="@+id/img_main_home_recyclerview_item_img"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="3dp"
            android:src="@drawable/main_image_img" />

        <TextView
            android:id="@+id/text_main_home_recyclerview_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:text="0" />

        <ImageView
            android:id="@+id/img_main_home_recyclerview_item_comment"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="3dp"
            android:src="@drawable/main_comment_img" />

        <TextView
            android:id="@+id/text_main_home_recyclerview_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:text="0" />

    </LinearLayout>

</LinearLayout>